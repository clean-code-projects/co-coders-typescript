{
  "name": "co-coders-typescript",
  "private": true,
  "repository": "https://github.com/clean-code-projects/co-coders-typescript.git",
  "license": "MIT",
  "author": "Clean Coders",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "clean": "lerna run clean",
    "codacy": "cat coverage/lcov.info | codacy-coverage",
    "coverage": "jest --coverage --maxWorkers=60%",
    "coverage:nodejs": "jest --coverage --maxWorkers=60%",
    "depcheck": "lerna run depcheck",
    "dev": "yarn test:watch",
    "lint": "eslint --ext=ts,js .",
    "ncu": "echo npm-check-updates && ncu -i && lerna exec ncu -- -i",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "release": "lerna publish --amend",
    "test": "jest --maxWorkers=60%",
    "test:nodejs": "jest --maxWorkers=60%",
    "test:watch": "jest --watch --maxWorkers=60%",
    "verify": "yarn clean && yarn lint && yarn build && yarn depcheck && yarn coverage",
    "watch": "yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^10.17.21",
    "@types/rimraf": "^3.0.0",
    "assertron": "^7.1.3",
    "babel-jest": "^25.4.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.6.5",
    "commitlint-circle": "^1.0.0",
    "depcheck": "^0.9.2",
    "dependency-check": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-harmony": "^3.0.1",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "jest-watch-exec": "^1.4.1",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^1.0.2",
    "jest-watch-typeahead": "^0.5.0",
    "lerna": "^3.20.2",
    "npm-check-updates": "^4.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  }
}
